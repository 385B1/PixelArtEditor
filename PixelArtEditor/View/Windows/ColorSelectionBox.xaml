<Window x:Class="PixelArtEditor.View.Windows.ColorSelectionBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PixelArtEditor.View.Windows"
        mc:Ignorable="d"
        Title="ColorSelectionBox" Height="250" Width="100">
    <Grid Background="AliceBlue">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button
            Grid.Column="0"
            Grid.Row="0"
            Background="Black"
            Click="Button_Click_Black"
            Margin="2"/>
        <Button
            Grid.Column="1"
            Grid.Row="0"
            Background="DarkGray"
            Click="Button_Click_DarkGray"
            Margin="2"/>
        <Button
            Grid.Column="2"
            Grid.Row="0"
            Background="LightGray"
            Click="Button_Click_LightGray"
            Margin="2"/>
        <Button
            Grid.Column="3"
            Grid.Row="0"
            Background="White"
            Click="Button_Click_White"
            Margin="2"/>
    </Grid>
</Window>
